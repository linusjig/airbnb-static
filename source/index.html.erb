<div class="welcome text-center padded">
  <h1>Welcome to Middleman</h1>
  <p class="doc">
    <%= link_to "Read Online Documentation", "http://middlemanapp.com/" %>
  </p>
</div>



<!-- Your banner code -->
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('images/background.jpg');">
  <div class="banner-content">
    <h1>Some Stuff</h1>
    <p>Very cool stuff, useful and smart</p>
    <a class="btn btn-primary btn-lg">GET IT</a>
  </div>
</div>

<!-- Your features code -->
<div class="text-center">
  <div class="wrapper-features">
    <div class="container">
      <div class="row">
        <div class="col-sm-6 col-md-3">
          <img src="images/globe.png" alt="globe">
          <h2>Discover the word</h2>
          <p>The earth is your new home.</p>
        </div>
        <div class="col-sm-6 col-md-3">
          <img src="images/dollar.png" alt="dollar">
          <h2>Pay online</h2>
          <p>No cash issues anymore.</p>
        </div>
        <div class="col-sm-6 col-md-3">
         <img src="images/beer.png" alt="beer">
         <h2>Meet people</h2>
         <p>Discover new culture and lifestyle</p>
       </div>
       <div class="col-sm-6 col-md-3">
         <img src="images/heart.png" alt="heart">
         <h2>Share and love</h2>
         <p>Join a community you will love</p>
       </div>
     </div>
   </div>
 </div>

 <!-- Your cards code -->
 <div class="wrapper-grey padded">
   <h2>Your next trip</h2>
   <div class="container">
     <div class="row">
       <div class="col-sm-4">
        <div class="card">
          <div class="card" style="background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('images/card-paris.jpg')">
            <div class="card-category">Paris</div>
            <div class="card-description">
              <h2>Seb's home</h2>
              <p>charming room with patio</p>
            </div>
            <img class="card-user avatar avatar-large" src="images/seb.jpg">
            <a class="card-link" href="#"></a>
          </div>
        </div>
      </div>
      <div class="col-sm-4">
        <div class="card">
          <div class="card" style="background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('images/card-london.jpeg')">
            <div class="card-category">Paris</div>
            <div class="card-description">
              <h2>Anne's home</h2>
              <p>charming patio without room</p>
            </div>
            <img class="card-user avatar avatar-large" src="images/anne.jpg">
            <a class="card-link" href="#"></a>
          </div>
        </div>
      </div>
      <div class="col-sm-4">
        <div class="card">
          <div class="card" style="background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('images/card-brussels.jpeg')">
            <div class="card-category">Brussels</div>
            <div class="card-description">
              <h2>Romain's home</h2>
              <p>charming room without patio</p>
            </div>
            <img class="card-user avatar avatar-large" src="images/romain.jpg">
            <a class="card-link" href="#"></a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Your newsletter code -->
<div class="text-center">
 <h3>Get news from us!</h3>
 <p>Leave us your mail and get news from us</p>
 <form action="/" class="form-inline">
   <input type="email" class="form-control" placeholder="email">
   <input type="submit" value="Subscribe" class="btn btn-primary">
 </form>
</div>
</div>


